{
  "include": ["src"],
  "exclude": ["node_modules", "lib"],
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./lib",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2020",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  }
}
